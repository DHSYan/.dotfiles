#!/bin/zsh

company=$1
deadline=$2

echo $company
echo "Comfirmed? (y/n)"
echo $deadline
read comfirm


if [[ "$comfirm" = "y" ]]; then
  
  cd "/Users/twinkletoes/Library/CloudStorage/OneDrive-UniversityofWaterloo/2. Co-op/WT1 Summer 2023/Applications"
  echo "cd to"
  pwd

  mkdir $company
  cd $company
  pwd
  mkdir Resume
  mkdir CoverLetter
  echo $deadline > deadline

  else
    echo "Ok abort..."
    exit 0
fi



