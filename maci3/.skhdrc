#!/bin/zsh

# Enter Normal Human Being Mode



### Window Commands
# alt - h : yabai -m window --focus west || $(yabai -m display --focus west)
# alt - l : yabai -m window --focus east || $(yabai -m display --focus east)
# alt - j : yabai -m window --focus south || $(yabai -m display --focus south)
# alt - k : yabai -m window --focus north || $(yabai -m display --focus north)


# alt - h : sh ~/.dotfiles/maci3/counterclockwise.sh
# alt - l : sh ~/.dotfiles/maci3/clockwise.sh



alt - space : yabai -m window --focus first
alt - p : yabai -m window --focus prev
alt - r : yabai -m window --focus recent

alt + shift - h : yabai -m window --swap west || $(yabai -m window --display west)
alt + shift - l : yabai -m window --swap east || $(yabai -m window --display east)
alt + shift - j : yabai -m window --swap south ||$(yabai -m window --display south)
alt + shift - k : yabai -m window --swap north ||$(yabai -m window --display north)

## Resize
alt + ctrl - h : yabai -m window west --resize right:-50:0 2> /dev/null || yabai -m window --resize right:-50:0
alt + ctrl - j : yabai -m window north --resize bottom:0:50 2> /dev/null || yabai -m window --resize bottom:0:50
alt + ctrl - k : yabai -m window south --resize top:0:-50 2> /dev/null || yabai -m window --resize top:0:-50
alt + ctrl - l : yabai -m window east --resize left:50:0 2> /dev/null || yabai -m window --resize left:50:0


alt + shift - 1 : yabai -m window --space 1
alt + shift - 2 : yabai -m window --space 2
alt + shift - 3 : yabai -m window --space 3
alt + shift - 4 : yabai -m window --space 4
alt + shift - 5 : yabai -m window --space 5
alt + shift - 6 : yabai -m window --space 6
alt + shift - 7 : yabai -m window --space 7
alt + shift - 8 : yabai -m window --space 8
alt + shift - 9 : yabai -m window --space 9
alt + shift - 0 : yabai -m window --space 10
# ctrl + shift - [ : yabai -m window --space 11
# ctrl + shift - ] : yabai -m window --space 12


alt - f :  yabai -m window --grid 1:1:0:0:1:1 || yabai -m window --toggle zoom-fullscreen 

### Interaction with System
## Finder
cmd + alt - d : open ~/Downloads/
cmd + alt - f : open ~/
cmd + alt - s : open "$HOME/Library/CloudStorage/OneDrive-UniversityofWaterloo/1. Academics/1B"
## Terminal
alt - return : open /Applications/kitty.app
## [C]hrome 
cmd + alt - c : open /Applications/Google\ Chrome.app/
## learn
cmd + alt - l : learn 
## Brave
cmd + alt - b : open /Applications/Brave\ Browser.app/
## Spotify
cmd + alt - m : open /Applications/Spotify.app/
## Bitwarden
cmd + alt - p : open /Applications/Bitwarden.app/

# Enter TV Mode
cmd + ctrl - f : yabai -m config layout float
# Going back to human mode
cmd + ctrl - b : yabai -m config layout bsp

# Moving Stuff in the main 4 quad
# cmd + ctrl - m : yabai -m window --move abs:597:668 && yabai -m window --resize abs:2000:1132
# cmd + ctrl - t : yabai -m window --move abs:597:25 && yabai -m window --resize abs:2000:642
# cmd + ctrl - l : yabai -m window --move abs:0:25 && yabai -m window --resize abs:596:1775
# cmd + ctrl - r : yabai -m window --move abs:2595:25 && yabai -m window --resize abs:596:1775
cmd + ctrl - w : yabai -m window --grid 9:16:3:3:10:6
cmd + ctrl - t : yabai -m window --grid 9:16:3:0:10:3
cmd + ctrl - m : yabai -m window --grid 9:16:0:0:3:16
cmd + ctrl - v : yabai -m window --grid 9:16:13:0:3:16

cmd + ctrl - o : yabai -m window --grid 6:6:0:0:2:3
cmd + ctrl - e : yabai -m window --grid 6:6:2:0:2:3
cmd + ctrl - u : yabai -m window --grid 6:6:4:0:2:3
cmd + ctrl - q : yabai -m window --grid 6:6:0:3:2:3
cmd + ctrl - j : yabai -m window --grid 6:6:2:3:2:3
cmd + ctrl - k : yabai -m window --grid 6:6:4:3:2:3

